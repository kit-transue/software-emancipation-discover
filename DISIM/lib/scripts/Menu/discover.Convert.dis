global Client
global env

############################################################################
# proc 		Convert2Entity
# Description:	converts the selected items to Entities and displays in results
############################################################################
proc Convert2Entity { sel } {
	return [ data symbol $sel ]
}

############################################################################
# proc 		Convert2Instance
# Description:	converts the selected items to Entities and displays in results
############################################################################
proc Convert2Instance { sel } {
	return [ data instance $sel ]
}

############################################################################
# proc 		Convert2Node
# Description:	converts the selected items to Entities and displays in results
############################################################################
proc Convert2Node { sel } {
	return [ data node $sel ]
}

add_menu "$Client.Convert"
add_item "$Client.Convert"	"Convert To Entity"	Convert2Entity			-optional
add_item "$Client.Convert"	"Convert To Instance"	Convert2Instance		-optional
add_item "$Client.Convert"	"Convert To AST Node"	Convert2Node			-optional

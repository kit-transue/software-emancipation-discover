global Client
global scope

############################################################################
# proc 		ShowConstantsInScope
# Description:	Dispays constants in selected scope in the elements column
############################################################################
proc ShowConstantsInScope {} {
	browser set elements [uses -constant [get_scope]]
}

############################################################################
# proc 		UsesConstants
# Description:	Displays constants used by selected entities in results column
############################################################################
proc UsesConstants { sel } {
	browser set results [uses -constant $sel]
}


add_menu "$Client.Constants"
add_item "$Client.Constants"	"Show Constants"	ShowConstantsInScope		-none
add_item "$Client.Constants"	"Uses Constants"	UsesConstants			-optional


